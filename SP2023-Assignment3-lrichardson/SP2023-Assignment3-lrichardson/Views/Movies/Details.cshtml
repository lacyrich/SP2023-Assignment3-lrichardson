@model SP2023_Assignment3_lrichardson.Models.ActorsMoviesVM

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.13.2/themes/vader/jquery-ui.css"
      integrity="sha384-s9zAKvidoYxg7IYQRABsD7922ZtD7WbdP3gRcQVTPIHhtDM/KPJDWC4T6YaIT8FC" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css"
      integrity="sha384-43vMlPako0hLMcE9uYveiee+IPD3dHOYcywDM3KCDWfQeSyxbQADKl0un2bb0FsQ" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"
        integrity="sha384-Ft/vb48LwsAEtgltj7o+6vtS2esTU9PCpDqcXs4OCVQFZu5BqprHtUCZ4kjK+bpE" crossorigin="anonymous"></script>

<script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"
        integrity="sha384-Oz2u38d0ZnNWE1m+AIMNNmk9a0EJEto9y2D3kXTaczVZucXieLf798xkusldWrLs" crossorigin="anonymous"></script>
<h1>Details</h1>

<div>
    <h4>Movies</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movies.MovieTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movies.MovieTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movies.IMDBHyperlink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movies.IMDBHyperlink)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movies.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movies.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movies.ReleaseYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movies.ReleaseYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movies.Poster)
        </dt>
        <dd>
            @if (Model.Movies.Poster != null)
            {
                <img width="120" height="150" src="@Url.Action("GetMoviePoster", "Movies", new {Model.Movies.Id})" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Movies.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<table id="movieActorsTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MoviesActors[0].Actors)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MoviesActors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Actors.Name)
                </td>

            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#movieActorsTable').DataTable({
            paging: true,
            ordering: true,
            searching: true
        });
    });
</script>


<table id="movieTweetsTable" class="display dataTable">
    <thead>
        <tr>
            <th>Top 100 Tweets</th>
            <th>Sentiment Analysis Compound Score</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>


<script type="text/javascript">
    $(document).ready(function () {
        $('#movieTweetsTable').DataTable({
            "paging": true,
            "ordering": true,
            "searching": true
        });
    });
</script>


@foreach (var tweet in ViewBag.TopTweets)
{
    <script type="text/javascript">
        $('#movieTweetsTable').DataTable().row.add([
            '@Html.Raw(tweet.Item1.Replace("'", "\\'"))',
            '@tweet.Item2'
        ]).draw();
    </script>
}

