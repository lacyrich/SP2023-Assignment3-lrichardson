@model SP2023_Assignment3_lrichardson.Models.ActorsMoviesVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actors</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actors.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actors.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actors.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actors.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actors.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actors.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actors.IMDBHyperlink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actors.IMDBHyperlink)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actors.Photo)
        </dt>
        <dd>
            @if (Model.Actors.Photo != null)
            {
                <img width="120" height="150" src="@Url.Action("GetActorPhoto", "Actors", new {Model.Actors.Id})" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Actors.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MoviesActors[0].Movies)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MoviesActors)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Movies.MovieTitle)
                </td>
               
            </tr>
        }
    </tbody>
</table>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"
        integrity="sha384-Ft/vb48LwsAEtgltj7o+6vtS2esTU9PCpDqcXs4OCVQFZu5BqprHtUCZ4kjK+bpE" crossorigin="anonymous"></script>

<script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"
        integrity="sha384-Oz2u38d0ZnNWE1m+AIMNNmk9a0EJEto9y2D3kXTaczVZucXieLf798xkusldWrLs" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css"
      integrity="sha384-43vMlPako0hLMcE9uYveiee+IPD3dHOYcywDM3KCDWfQeSyxbQADKl0un2bb0FsQ" crossorigin="anonymous">
<h2>Twitter Sentiment Analysis</h2>
<h3>Average Compound Score of Overall Sentiment Analysis: @ViewBag.CompoundScore</h3>
<table id="myTable">
    <thead>

        <tr>
            <th>Top 100 Tweets</th>
            <th>Sentiment Analysis Compound Score</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tweet in ViewBag.TopTweets)
        {
            <tr>
                <td>@tweet.Item1</td>
                <td>@tweet.Item2</td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable({

            paging: true,
            ordering: true,
            searching: true,

        });
    });
</script>



